{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Rosary",
    "version": "2.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "Rosary",
        "label": "main",
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": ["deb", "nsis", "msi", "appimage"],
      "identifier": "io.github.roseblume.rosary",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "deb": {
        "files": {
          "/usr/share/metainfo/io.github.roseblume.xml": "../extra/io.github.roseblume.rosary.xml",
          "/opt/rosary/README.md": "../README.md",
          "/opt/rosary/LICENSE": "../LICENSE"
        }
      }
    }
  }
}
